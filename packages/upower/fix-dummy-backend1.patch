+typedef struct {
+    gdouble  percentage;
+    gboolean plugged;
+    gboolean charging;
+    gboolean full;
+} TermuxBatteryInfo;
+
+static gboolean
+termux_battery_query (TermuxBatteryInfo *info)
+{
+    gchar  *stdout_buf = NULL;
+    gint    exit_status = 0;
+    GError *error = NULL;
+
+    gchar *argv[] = { TERMUX_BATTERY_STATUS_PATH, NULL };
+
+    if (!g_spawn_sync (NULL,
+                       argv,
+                       NULL,
+                       G_SPAWN_STDERR_TO_DEV_NULL,
+                       NULL,
+                       NULL,
+                       &stdout_buf,
+                       NULL,
+                       &exit_status,
+                       &error)) {
+        g_clear_error (&error);
+        g_free (stdout_buf);
+        return FALSE;
+    }
+
+    if (exit_status != 0 || stdout_buf == NULL) {
+        g_free (stdout_buf);
+        return FALSE;
+    }
+
+    info->percentage = 0.0;
+    info->plugged = FALSE;
+    info->charging = FALSE;
+    info->full = FALSE;
+
+    gchar *p;
+
+    p = strstr (stdout_buf, "\"percentage\"");
+    if (p) {
+        p = strchr (p, ':');
+        if (p)
+            info->percentage = g_ascii_strtod (p + 1, NULL);
+    }
+
+    p = strstr (stdout_buf, "\"plugged\"");
+    if (p) {
+        if (strstr (p, "UNPLUGGED"))
+            info->plugged = FALSE;
+        else
+            info->plugged = TRUE;
+    }
+
+    p = strstr (stdout_buf, "\"status\"");
+    if (p) {
+        if (strstr (p, "CHARGING"))
+            info->charging = TRUE;
+        else if (strstr (p, "FULL"))
+            info->full = TRUE;
+    }
+
+    g_free (stdout_buf);
+    return TRUE;
+}
+
+static void
+up_backend_update_device (UpBackend *backend)
+{
+    TermuxBatteryInfo info;
+    UpDeviceState state;
+
+    if (!termux_battery_query (&info))
+        return;
+
+    if (info.full)
+        state = UP_DEVICE_STATE_FULLY_CHARGED;
+    else if (info.charging)
+        state = UP_DEVICE_STATE_CHARGING;
+    else
+        state = UP_DEVICE_STATE_DISCHARGING;
+
+    g_object_set (backend->priv->device,
+                  "percentage",  info.percentage,
+                  "state",       state,
+                  "online",      info.plugged || info.full,
+                  "update-time",
+                  (guint64) g_get_real_time () / G_USEC_PER_SEC,
+                  NULL);
+}
