 /**
  * up_backend_init:
  **/
+#ifdef __TERMUX__
+
+static gboolean
+termux_update_device (gpointer user_data)
+{
+    UpBackend *backend = UP_BACKEND (user_data);
+    UpDevice *device = backend->priv->device;
+    UpDevice *ac = backend->priv->ac;
+    FILE *fp;
+    char buffer[4096];
+    float percentage = 0.0f;
+    char status[64] = {0};
+    char plugged[64] = {0};
+    float temperature = 0.0f;
+    UpDeviceState state = UP_DEVICE_STATE_UNKNOWN;
+    gboolean online = FALSE;
+    static gboolean switched = FALSE;
+
+    fp = popen ("@TERMUX_PREFIX@/bin/termux-battery-status", "r");
+    if (!fp)
+        return TRUE;
+
+    size_t len = fread (buffer, 1, sizeof(buffer)-1, fp);
+    buffer[len] = '\0';
+    pclose (fp);
+
+    /* Bail out if data isn't valid yet */
+    if (len == 0 || strstr (buffer, "\"percentage\"") == NULL)
+        return TRUE;
+
+    char *p;
+
+    p = strstr (buffer, "\"percentage\"");
+    if (p)
+        sscanf (p, "\"percentage\": %f", &percentage);
+
+    p = strstr (buffer, "\"status\"");
+    if (p)
+        sscanf (p, "\"status\": \"%63[^\"]\"", status);
+
+    p = strstr (buffer, "\"plugged\"");
+    if (p)
+        sscanf (p, "\"plugged\": \"%63[^\"]\"", plugged);
+
+    p = strstr (buffer, "\"temperature\"");
+    if (p)
+        sscanf (p, "\"temperature\": %f", &temperature);
+
+    gboolean plugged_in =
+    (g_strcmp0 (plugged, "PLUGGED_AC") == 0 ||
+     g_strcmp0 (plugged, "PLUGGED_USB") == 0 ||
+     g_strcmp0 (plugged, "PLUGGED_WIRELESS") == 0 ||
+     g_strcmp0 (plugged, "PLUGGED_DOCK") == 0);
+
+/* Update AC first */
+g_object_set (ac,
+              "online", plugged_in,
+              "update-time", (guint64) g_get_real_time () / G_USEC_PER_SEC,
+              NULL);
+
+/* Now decide battery state */
+if (!plugged_in) {
+    state = UP_DEVICE_STATE_DISCHARGING;
+} else {
+    if (g_strcmp0 (status, "CHARGING") == 0)
+        state = UP_DEVICE_STATE_CHARGING;
+    else if (g_strcmp0 (status, "FULL") == 0)
+        state = UP_DEVICE_STATE_FULLY_CHARGED;
+    else
+        state = UP_DEVICE_STATE_PENDING_CHARGE;
+}
+
+    g_object_set (device,
+                  "percentage", percentage,
+                  "state", state,
+                  "temperature", temperature,
+                  "update-time", (guint64) g_get_real_time () / G_USEC_PER_SEC,
+                  NULL);
+
+    /* Switch from fast 1s polling to normal 5s after first success */
+    if (!switched) {
+        switched = TRUE;
+        g_timeout_add_seconds (5, termux_update_device, backend);
+        return FALSE; /* stop the 1s timer */
+    }
+
+    return TRUE;
+}
