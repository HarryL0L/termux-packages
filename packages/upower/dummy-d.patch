 /**
  * up_backend_init:
  **/
+#ifdef __TERMUX__
+
+static gboolean
+termux_update_device (gpointer user_data)
+{
+    UpDevice *device = UP_DEVICE (user_data);
+    gchar *stdout_buf = NULL;
+    gchar *stderr_buf = NULL;
+    gint exit_status = 0;
+    GError *error = NULL;
+
+    float percentage = 0.0f;
+    float temperature = 0.0f;
+    char status[64] = {0};
+    UpDeviceState state = UP_DEVICE_STATE_UNKNOWN;
+
+    gboolean success = g_spawn_command_line_sync(
+        "termux-battery-status",
+        &stdout_buf,
+        &stderr_buf,
+        &exit_status,
+        &error
+    );
+
+    if (!success || exit_status != 0) {
+        if (error) {
+            g_warning("Failed to run termux-battery-status: %s", error->message);
+            g_error_free(error);
+        }
+        g_free(stdout_buf);
+        g_free(stderr_buf);
+        return TRUE;
+    }
+
+    if (!stdout_buf || !strstr(stdout_buf, "\"percentage\"")) {
+        g_free(stdout_buf);
+        g_free(stderr_buf);
+        return TRUE;
+    }
+
+    char *p;
+
+    p = strstr(stdout_buf, "\"percentage\"");
+    if (p)
+        sscanf(p, "\"percentage\": %f", &percentage);
+
+    p = strstr(stdout_buf, "\"status\"");
+    if (p)
+        sscanf(p, "\"status\": \"%63[^\"]\"", status);
+
+    p = strstr(stdout_buf, "\"temperature\"");
+    if (p)
+        sscanf(p, "\"temperature\": %f", &temperature);
+
+    if (g_strcmp0(status, "CHARGING") == 0)
+        state = UP_DEVICE_STATE_CHARGING;
+    else if (g_strcmp0(status, "DISCHARGING") == 0)
+        state = UP_DEVICE_STATE_DISCHARGING;
+    else if (g_strcmp0(status, "NOT_CHARGING") == 0)
+        state = UP_DEVICE_STATE_DISCHARGING;
+    else if (g_strcmp0(status, "FULL") == 0)
+        state = UP_DEVICE_STATE_FULLY_CHARGED;
+    else
+        state = UP_DEVICE_STATE_UNKNOWN;
+
+    g_object_set(device,
+                 "percentage", percentage,
+                 "state", state,
+                 "temperature", temperature,
+                 "update-time", (guint64) g_get_real_time() / G_USEC_PER_SEC,
+                 NULL);
+
+    g_free(stdout_buf);
+    g_free(stderr_buf);
+
+    return TRUE;
+}
+
+#endif
