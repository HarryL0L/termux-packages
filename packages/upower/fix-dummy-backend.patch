+#ifdef __TERMUX__
+
+static gboolean
+termux_update_device (gpointer user_data)
+{
+    UpDevice *device = UP_DEVICE (user_data);
+    GError *error = NULL;
+    gchar *stdout_buf = NULL;
+    gchar *stderr_buf = NULL;
+    gint exit_status = 0;
+
+    const gchar *argv[] = {
+        "@TERMUX_PREFIX@/bin/termux-battery-status",
+        NULL
+    };
+
+    gboolean ok = g_spawn_sync(
+        NULL,               /* working directory */
+        (gchar **)argv,     /* argv */
+        NULL,               /* envp */
+        0,
+        NULL,
+        NULL,
+        &stdout_buf,
+        &stderr_buf,
+        &exit_status,
+        &error
+    );
+
+    if (!ok || exit_status != 0 || stdout_buf == NULL) {
+        g_clear_error(&error);
+        g_free(stdout_buf);
+        g_free(stderr_buf);
+        return TRUE;
+    }
+
+    float percentage = 0.0f;
+    char status[64] = {0};
+    char plugged[64] = {0};
+
+    char *p;
+
+    p = strstr(stdout_buf, "\"percentage\"");
+    if (p)
+        sscanf(p, "\"percentage\": %f", &percentage);
+
+    p = strstr(stdout_buf, "\"status\"");
+    if (p)
+        sscanf(p, "\"status\": \"%63[^\"]\"", status);
+
+    p = strstr(stdout_buf, "\"plugged\"");
+    if (p)
+        sscanf(p, "\"plugged\": \"%63[^\"]\"", plugged);
+
+    UpDeviceState state = UP_DEVICE_STATE_UNKNOWN;
+    gboolean online = FALSE;
+
+    if (g_strcmp0(status, "CHARGING") == 0)
+        state = UP_DEVICE_STATE_CHARGING;
+    else if (g_strcmp0(status, "DISCHARGING") == 0)
+        state = UP_DEVICE_STATE_DISCHARGING;
+    else if (g_strcmp0(status, "FULL") == 0)
+        state = UP_DEVICE_STATE_FULLY_CHARGED;
+
+    if (g_strcmp0(plugged, "UNPLUGGED") != 0)
+        online = TRUE;
+
+    g_object_set(device,
+                 "percentage", percentage,
+                 "state", state,
+                 "online", online,
+                 "update-time",
+                 (guint64) g_get_real_time() / G_USEC_PER_SEC,
+                 NULL);
+
+    g_free(stdout_buf);
+    g_free(stderr_buf);
+
+    return TRUE;
+}
+
+#endif
